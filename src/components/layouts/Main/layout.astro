---
import Footer from '@components/modules/Footer/footer.astro';
import Header from '@components/modules/Header/header.astro';
import AnimatedBackground from '@components/molecules/AnimatedBackground/AnimatedBackground.tsx';
import '@styles/main.scss';
import './layout.scss';
const { title } = Astro.props;
---

<html lang='en' data-theme='dark'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/logo.svg' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1, viewport-fit=cover'
    />
    <title>{title}</title>
  </head>
  <body>
    <AnimatedBackground client:load />
    <Header />
    <slot />
    <Footer />
  </body>
</html>
