---
import Anchor from '@components/atoms/Anchor/Anchor.astro';
import './header.scss';
import { NAV_ELEMENTS } from './header.content';
---

<header class='header hidden'>
  <!-- Progress indicator -->
  <div class='header__progress'>
    <div class='header__progress-bar'></div>
  </div>

  <!-- Mobile menu toggle -->
  <button class='header__mobile-toggle' aria-label='Toggle navigation menu'>
    <span class='header__hamburger'>
      <span></span>
      <span></span>
      <span></span>
    </span>
  </button>

  <!-- Navigation -->
  <nav class='nav'>
    {
      NAV_ELEMENTS.map((elem: { text: string; href: string }) => {
        return (
          <Anchor className='nav__link text--h3' href={elem.href}>
            {elem.text}
          </Anchor>
        );
      })
    }
  </nav>

  <!-- Theme toggle -->
  <button class='header__theme-toggle' aria-label='Toggle theme'>
    <svg class='header__theme-icon' viewBox='0 0 24 24' aria-hidden='true'>
      <path
        fill='currentColor'
        d='M12 3a1 1 0 0 1 0 2 7 7 0 1 0 7 7 1 1 0 1 1 2 0 9 9 0 1 1-9-9Z'
      ></path>
    </svg>
  </button>
  <button class='header__lang-toggle' aria-label='Toggle language' data-lang>
    EN
  </button>
</header>

<script>
  import { initHeader } from './header.ts';

  window.addEventListener('DOMContentLoaded', () => {
    initHeader();
  });
</script>
